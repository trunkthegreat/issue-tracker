  "permissions": {
    "roles": {
      "admin": {
        "name": "Administrator",
        "permissions": ["create", "read", "update", "delete", "manage_categories", "manage_users", "export_data"]
      },
      "editor": {
        "name": "Editor",
        "permissions": ["create", "read", "update", "delete", "export_data"]
      },
      "viewer": {
        "name": "Viewer",
        "permissions": ["read"]
      },
      "contributor": {
        "name": "Contributor",
        "permissions": ["create", "read", "update_own"]
      }
    },
    "defaultRole": "contributor"
  },
  "localization": {
    "defaultLanguage": "en",
    "supportedLanguages": ["en", "vi", "zh", "ja", "es", "fr", "de"],
    "dateFormats": {
      "en": "MM/DD/YYYY",
      "vi": "DD/MM/YYYY",
      "zh": "YYYY/MM/DD",
      "ja": "YYYY/MM/DD"
    },
    "timeFormats": {
      "en": "12h",
      "vi": "24h",
      "zh": "24h",
      "ja": "24h"
    }
  },
  "validation": {
    "issue": {
      "title": {
        "required": true,
        "minLength": 3,
        "maxLength": 200
      },
      "content": {
        "required": true,
        "minLength": 10,
        "maxLength": 10000
      },
      "category": {
        "required": true,
        "validValues": ["bug", "feature", "improvement", "question", "other"]
      },
      "priority": {
        "required": false,
        "validValues": ["low", "medium", "high", "critical"]
      }
    },
    "category": {
      "name": {
        "required": true,
        "minLength": 2,
        "maxLength": 50
      },
      "color": {
        "required": true,
        "pattern": "^#[0-9A-Fa-f]{6}$"
      }
    }
  }
