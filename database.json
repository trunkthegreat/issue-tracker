  "workflows": {
    "default": {
      "name": "Default Workflow",
      "stages": [
        {
          "id": "new",
          "name": "New",
          "description": "Newly created issue",
          "color": "#2196f3",
          "allowedTransitions": ["investigating", "assigned", "closed"]
        },
        {
          "id": "investigating",
          "name": "Investigating",
          "description": "Issue is being investigated",
          "color": "#ff9800",
          "allowedTransitions": ["assigned", "in-progress", "closed"]
        },
        {
          "id": "assigned",
          "name": "Assigned",
          "description": "Issue has been assigned",
          "color": "#9c27b0",
          "allowedTransitions": ["in-progress", "investigating", "closed"]
        },
        {
          "id": "in-progress",
          "name": "In Progress",
          "description": "Work is actively being done",
          "color": "#ff5722",
          "allowedTransitions": ["testing", "review", "blocked", "closed"]
        },
        {
          "id": "testing",
          "name": "Testing",
          "description": "Solution is being tested",
          "color": "#673ab7",
          "allowedTransitions": ["in-progress", "review", "resolved"]
        },
        {
          "id": "review",
          "name": "Review",
          "description": "Under review",
          "color": "#3f51b5",
          "allowedTransitions": ["in-progress", "resolved", "closed"]
        },
        {
          "id": "resolved",
          "name": "Resolved",
          "description": "Issue has been resolved",
          "color": "#4caf50",
          "allowedTransitions": ["closed", "in-progress"]
        },
        {
          "id": "closed",
          "name": "Closed",
          "description": "Issue is closed",
          "color": "#9e9e9e",
          "allowedTransitions": ["in-progress", "investigating"]
        },
        {
          "id": "blocked",
          "name": "Blocked",
          "description": "Issue is blocked by dependencies",
          "color": "#f44336",
          "allowedTransitions": ["in-progress", "investigating", "closed"]
        }
      ]
    }
